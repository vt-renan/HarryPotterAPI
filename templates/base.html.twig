<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/png" href="/images/storm_icon.png" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="main_color_bg">
            <div>
                <a href="/" class="">
                    <img src="{{ asset('images/storm_icon.png') }}" alt="storm image">
                    <span class="title">Maraudeur's Map</span>
                </a>
            </div>
            <ul>
                <li><a href="{{ path('documentation_show') }}">Documentation</a></li>
                <li><a href="{{ path('potterDex_show') }}">PotterDex</a></li>
            </ul>
        </nav>

{#        Mettre includes (creer templates subheader)#}
        {%  block subheader %}
            <section class="subheader secondary_color_bg main_color">
                <h1 class="title">{{ title }}</h1>
                <p>
                    <H3> {{ description }}</H3>
                    <p> {{ citation }} </p>
                    <a href="{{ href }}"> {{ href_text }}</a>
                </p>
            </section>
        {% endblock %}

        {% block body %}
        {% endblock %}
    </body>

    <footer class="main_color_bg secondary_color">
        <div class="ctn">
            <div>
                <i class="fa fa-rocket"></i>
                Copied from
                <a href="https://marauderapi.fr" class="tertiary_color">https://marauderapi.fr </a>
            </div>
            <div>
                <a href="/" target="_blank"><i class="fab fa-github secondary_color"></i></a>
                <a href="/" target="_blank"><i class="fab fa-twitter secondary_color"></i></a>
                <a href="/" target="_blank"><i class="fab fa-linkedin secondary_color"></i></a>
            </div>
        </div>
    </footer>
</html>
